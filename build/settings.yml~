   #Part for patch extraction: take points on the plane
   #square or circular
   method: square
   
   #1cm per pixel
   cmPerPixel: 0.25
   
   #in meters -> 1cm per pixel!
   epsilon: 0.16

   #These only for circular neighborhood
   #thetas: 15
   #rays: 5

